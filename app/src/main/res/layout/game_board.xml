<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_2"
    android:orientation="vertical">


    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_1"
            style="@style/ButtonStyle"
            android:text="@string/button_1_text"/>

        <Button
            android:id="@+id/button_2"
            style="@style/ButtonStyle"
            android:text="@string/button_2_text"/>

        <Button
            android:id="@+id/button_3"
            style="@style/ButtonStyle"
            android:text="@string/button_3_text"/>

        <Button
            android:id="@+id/button_4"
            style="@style/ButtonStyle"
            android:text="@string/button_4_text"/>

    </LinearLayout>


    <!-- Место для кубиков -->
    <FrameLayout
        android:id="@+id/board"
        android:onClick="dropDice"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dice_1"
            android:layout_width="350dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/dice_1_01"/>

        <ImageView
            android:id="@+id/dice_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/dice_2_02"/>

        <ImageView
            android:id="@+id/dice_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/dice_3_03"/>

        <ImageView
            android:id="@+id/dice_4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/dice_4_04"/>

    </FrameLayout>

</LinearLayout>