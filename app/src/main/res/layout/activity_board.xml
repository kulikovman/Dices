<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical">

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_1"
            style="@style/ButtonStyle"
            android:text="@string/button_1_text"/>

        <Button
            android:id="@+id/button_2"
            style="@style/ButtonStyle"
            android:text="@string/button_2_text"/>

        <Button
            android:id="@+id/button_3"
            style="@style/ButtonStyle"
            android:text="@string/button_3_text"/>

        <Button
            android:id="@+id/button_4"
            style="@style/ButtonStyle"
            android:text="@string/button_4_text"/>

    </LinearLayout>


    <!-- Блок с кубиками -->
    <ViewFlipper
        android:id="@+id/cubes_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/box_1"
            layout="@layout/dice_one"/>

        <include
            android:id="@+id/box_2"
            layout="@layout/dice_two"/>

    </ViewFlipper>

</android.support.constraint.ConstraintLayout>