<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.kulikovman.dices.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.39999998"/>

    <ImageView
        android:id="@+id/dice_left"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/dice_6_05"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.35000002"/>

    <ImageView
        android:id="@+id/dice_right"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/dice_6_02"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="-1dp"
        app:layout_constraintTop_toTopOf="@+id/dice_left"
        android:layout_marginTop="0dp"/>


</android.support.constraint.ConstraintLayout>
